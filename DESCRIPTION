Type: Package
Package: flamingos
Title: Functional Latent Data Models for Clustering Heterogeneous Time Series
Version: 0.1.0
Authors@R: c(person("Faicel", "Chamroukhi", role = c("aut"),
    email = "faicel.chamroukhi@unicaen.fr",
    comment = c(ORCID = "0000-0002-5894-3103")),
